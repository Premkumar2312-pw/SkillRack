boundedArray *getPositionDigitsSum(int SIZE, int *n)
{
    int maxLen = 0;

    for(int i=0;i<SIZE;i++){
        int x=n[i], len=0;
        if(x==0) len=1;
        while(x){ len++; x/=10; }
        if(len > maxLen) maxLen = len;
    }

    boundedArray *res = malloc(sizeof(boundedArray));
    res->SIZE = maxLen;
    res->arr = malloc(maxLen * sizeof(int));

    for(int p=maxLen-1; p>=0; p--){
        int sum = 0;
        int shift = maxLen - 1 - p;

        for(int i=0;i<SIZE;i++){
            int x = n[i];
            for(int k=0;k<shift;k++) x /= 10;
            sum += x % 10;
        }

        res->arr[p] = sum;
    }

    return res;
}